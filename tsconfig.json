{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2021"],
    "esModuleInterop": true,
    "skipLibCheck": false,
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./build"
  },
  "exclude": ["**/test/", "**/node_modules/", "**/build/", "**/src/"]
}
